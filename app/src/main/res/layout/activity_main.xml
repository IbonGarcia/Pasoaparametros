<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30px"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bactividad1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad 01"
        android:onClick="onClick1"/>
    <Button
        android:id="@+id/bactividad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad 02"
        android:onClick="onClick2"/>
    <Button
        android:id="@+id/bactividad3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad 03"/>
    <Button
        android:id="@+id/bactividad4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad 04"/>
    <Button
        android:id="@+id/bsalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:onClick="salir"/>

</LinearLayout>